{
    "rules" : {
      	".read" : "auth != null",
        ".write" : "auth != null",
        "$grid" : {
            ".validate" : "$grid.matches(/^(grid)[0-9]+$/) && newData.hasChildren()",
            "numCols" : {
              ".validate" : "newData.val() > 0"
            },
            "numRows" : {
              ".validate" : "newData.val() > 0"
            },
            "$row" : {
                ".validate" : "$row.matches(/^(r)[0-9]+$/) && newData.hasChildren()",
                "$col" : {
                    ".validate" : "$col.matches(/^(c)[0-9]+$/) && newData.val().matches(/^#[0-9a-fA-F]{6}$/)"
                }
            }
        }
    }
}
